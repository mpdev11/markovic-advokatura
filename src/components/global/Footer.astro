---
import logo from "../../assets/images/logo.svg";
import SocialIcons from "../UI/SocialIcons.astro";
const currentYear = new Date().getFullYear();

const contactInfo = {
  phone: "+381 65 429 1705",
  email: "kontakt@markovicadvokatura.rs",
};
---

<footer class="bg-[#2B2B2B] text-gray-300 py-12">
  <div class="container mx-auto px-4 max-w-7xl">
    <!-- Logo and Quote Section -->
    <div class="flex flex-col items-center space-y-6 mb-12">
      <a href="/" class="flex items-center">
        <img src={logo.src} alt="Marković Advokatura" class="h-24 w-auto" />
      </a>
      <div class="text-center">
        <p class="text-background text-lg leading-relaxed max-w-md italic">
          Pružam profesionalne advokatske usluge sa dugogodišnjim iskustvom u različitim oblastima prava.
        </p>
      </div>
    </div>

    <!-- Contact Section -->
    <div class="flex flex-col items-center space-y-6 mb-12">
      <h3 class="text-lg font-main font-semibold text-background mb-2 uppercase">Kontakt</h3>
      <div class="text-base flex flex-col gap-3 text-gray-400 text-center">
        <a href={`tel:${contactInfo.phone}`} class="text-background decoration-background underline hover:text-white transition-colors duration-200">
          {contactInfo.phone}
        </a>
        <a
          href={`mailto:${contactInfo.email}`}
          class="text-background decoration-background underline hover:text-white transition-colors duration-200">
          {contactInfo.email}
        </a>
      </div>
      <div class="flex items-center space-x-3">
        <SocialIcons />
      </div>
    </div>

    <!-- Legal Notice -->
    <div class="border-t border-gray-700 pt-8">
      <div class="text-center text-sm text-gray-400">
        © {currentYear} Marković Advokatura. Sva prava zadržana.
      </div>
    </div>
  </div>
</footer>
